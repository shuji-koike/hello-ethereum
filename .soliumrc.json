{
  "extends": "solium:recommended",
  "plugins": ["security"],
  "rules": {
    "quotes": ["error", "double"],
    "indentation": ["error", 2],
    "no-empty-blocks": "error",
    "whitespace": "error",
    "deprecated-suicide": "error",
    "pragma-on-top": "error",
    "lbrace": "error",
    "mixedcase": "error",
    "camelcase": "error",
    "uppercase": "error",
    "blank-lines": "error",
    "arg-overflow": "error",
    "function-order": "error"
  }
}
